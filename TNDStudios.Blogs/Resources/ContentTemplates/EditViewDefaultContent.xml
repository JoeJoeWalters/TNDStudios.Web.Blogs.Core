<?xml version="1.0" encoding="utf-8" ?>
<items>
  <item id="edititem">
    <content>
      <![CDATA[
      <form method="POST">
        <input type="hidden" id="Id_{id}" name="Id" value="{id}" />
        <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
        <div class="container">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 mx-auto">
              <div class="post-preview">
                <h2 class="post-title"><input type="text" class="form-control" style="min-width: 100%" id="name_{id}" name="Name" value="{name}"></input></h2>
                <h3 class="post-subtitle">
                  <textarea class="form-control" style="min-width: 100%" id="Description_{id}" name="Description">{description}</textarea>
                </h3>
                <p class="post-meta">
                  Posted by 
                  <input type="text" id="Author_{id}" name="Author" value="{author}"></input>
                  on
                  <input type="text" id="PublishedDate_{id}" name="PublishedDate" value="{publisheddate}"></input>
                </p>
                <p>
                  <textarea id="Content_{id}" name="Content">{content}</textarea>
                </p>
                <p>
                  <div class="btn-toolbar">
                    <input type="submit" id="SaveButton_{id}" name="SaveButton_{id}" class="btn btn-sm btn-primary pull-right" value="Save"></input>
                    <input type="button" id="CancelButton_{id}" name="CancelButton_{id}" class="btn btn-sm btn-warning pull-right" value="Cancel" onclick="document.location='{controllerurl}/item/{id}_{seourltitle}'"></input>
                  </div>
                </p>
                <script>
                  CKEDITOR.replace('Content_{id}', {
                      filebrowserBrowseUrl: '{controllerurl}/item/{id}_{seourltitle}/attachment?Source=CKEditor',
                      filebrowserUploadUrl: '{controllerurl}/item/{id}_{seourltitle}/attachment/upload?Source=CKEditor'
                  });
                </script>
              </div>
            </div>
          </div>
        </div>
      </form>
    ]]>
    </content>
  </item>
</items>