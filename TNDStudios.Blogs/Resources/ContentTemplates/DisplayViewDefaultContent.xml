<?xml version="1.0" encoding="utf-8" ?>
<items>
  <item id="item">
    <content>
      <![CDATA[
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 mx-auto">
            <div class="btn-toolbar">
              {editbutton}
              <input type="button" id="homebutton_{id}" name="homebutton_{id}" class="btn btn-sm pull-right" value="Blog Home" onclick="javascript: document.location='{controllerurl}'">
            </div>
          </div>
          <div class="col-lg-12 col-md-12 col-sm-12 mx-auto">
            <h1 class="post-title">{name}</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 mx-auto">
            <h3 class="post-subtitle">{description}</h3>
            <p class="post-meta">
              Posted by <a href="#">{author}</a> on {publisheddate}
            </p>
            <p>{content}</p>
          </div>
        </div>
      </div>
    ]]>
    </content>
  </item>
  <item id="edititem-button">
    <content>
      <![CDATA[
        <input type="button" id="editbutton_{id}" name="editbutton_{id}" class="btn btn-sm btn-primary pull-right" value="Edit" onclick="javascript: document.location='{controllerurl}/item/{id}_{seourltitle}/edit'">
      ]]>
    </content>
  </item>
  <item id="seo-header">
    <content>
      <![CDATA[
            <meta name="title" content="{name}">
            <meta name="description" content="{description}">
            <meta name="author" content="{author}">
            <meta name="keywords" content="{seotags}">
      ]]>
    </content>
  </item>
</items>
