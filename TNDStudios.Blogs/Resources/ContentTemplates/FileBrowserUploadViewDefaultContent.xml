<?xml version="1.0" encoding="utf-8" ?>
<items>
  <item id="attachment-upload">
    <content>
      <![CDATA[
      <form method="POST" enctype="multipart/form-data" action="{controllerurl}/item/{id}_{seourltitle}/attachment">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 mx-auto">
              <p>
                <input type="file" name="File" id="File_{id}"></input>
              </p>
              <p>
                <input type="submit" id="UploadButton_{id}" name="UploadButton_{id}" class="btn btn_small" value="Upload File"></input>
              </p>
            </div>
          </div>
          {attachments}
        </div>
      </form>
    ]]>
    </content>
  </item>
</items>
