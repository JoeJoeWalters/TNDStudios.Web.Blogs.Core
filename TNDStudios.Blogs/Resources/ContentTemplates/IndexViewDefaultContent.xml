<?xml version="1.0" encoding="utf-8" ?>
<items>
  <item id="header">
    <content>
      <![CDATA[
      <div class="container">
        <div class="row">
          <div class="col-lg-12 mx-auto">Header</div>
        </div>
      ]]>
    </content>
  </item>
  <item id="body">
    <content>
      <![CDATA[<div class="row">{items}</div>]]>
    </content>
  </item>
  <item id="indexclearfix">
    <content>
      <![CDATA[<div class="clearfix {clearfix}"></div>]]>
    </content>
  </item>
  <item id="indexclearfix-medium">
    <content>
      <![CDATA[visible-md]]>
    </content>
  </item>
  <item id="indexclearfix-large">
    <content>
      <![CDATA[visible-lg]]>
    </content>
  </item>
  <item id="item">
    <content>
      <![CDATA[
      <div class="col-lg-4 col-md-6 col-sm-12 mx-auto\">
        <div class="post-preview">
          <a href="{controllerurl}/item/{id}_{seourltitle}">
            <h2 class="post-title">{name}</h2>
            <h3 class="post-subtitle">{description}</h3>
          </a>
          <p class="post-meta">
            Posted by <a href="#">{author}</a> on {publisheddate}
          </p>
        </div>
        <hr>
      </div>
      ]]>
    </content>
  </item>
  <item id="footer">
    <content>
      <![CDATA[
        <div class="row">
          <div class="col-lg-12 mx-auto">Footer</div>
        </div>
      </div>
      ]]>
    </content>
  </item>
  <item id="seo-header">
    <content>
      <![CDATA[
            <meta name="title" content="{name}">
            <meta name="description" content="{description}">
            <meta name="author" content="{author}">
            <meta name="keywords" content="{keywords}">
              ]]>
    </content>
  </item>
</items>
